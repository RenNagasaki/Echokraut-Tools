<UserControl x:Class="FF14_Echokraut.UIElements.NPCDataUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FF14_Echokraut.UIElements"
             mc:Ignorable="d" Background="AliceBlue" Height="55" d:DesignWidth ="400" VerticalAlignment="Top" Margin="5,5,5,5">
    <Grid>
        <TextBox x:Name="tBox_NpcName" Margin="5,6,180,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" TextChanged="tBox_NpcName_TextChanged"/>
        <ComboBox x:Name="cBox_Voices"  Margin="0,5,5,0" HorizontalAlignment="Right" Width="170" VerticalAlignment="Top" SelectionChanged="cBox_Voices_SelectionChanged" Height="20"/>
        <Label x:Name="lbl_Error"  Content="" Margin="0,30,75,0" VerticalAlignment="Top" Foreground="Red" Height="20"/>
        <Button x:Name="btn_Delete" HorizontalAlignment="Right" Margin="370,30,5,0" VerticalAlignment="Top" Width="20" Height="20" Click="btn_Delete_Click"> 
            <Image Source="/Resources/bin.png" />
        </Button>
        <Button x:Name="btn_Test" Content="Test" HorizontalAlignment="Right" Margin="330,30,30,0" VerticalAlignment="Top" Width="40" Click="btn_Test_Click"/>
    </Grid>
</UserControl>
